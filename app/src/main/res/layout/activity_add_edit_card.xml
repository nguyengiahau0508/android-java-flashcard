<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Front Text -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/front_text"
            app:boxBackgroundMode="outlined"
            app:boxStrokeColor="@color/tdmu_blue"
            app:hintTextColor="@color/tdmu_blue"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFrontText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Back Text -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/back_text"
            app:boxBackgroundMode="outlined"
            app:boxStrokeColor="@color/tdmu_blue"
            app:hintTextColor="@color/tdmu_blue"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Image preview -->
        <ImageView
            android:id="@+id/ivCardImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:contentDescription="@string/card_image_preview" />

        <!-- Choose Image -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_image"
            android:fontFamily="@font/merriweather"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/tdmu_blue"
            android:textColor="@color/tdmu_white"
            android:layout_marginBottom="20dp"/>

        <!-- Action buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:fontFamily="@font/merriweather"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/tdmu_blue"
                android:textColor="@color/tdmu_white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:fontFamily="@font/merriweather"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/tdmu_white"
                android:textColor="@color/tdmu_blue"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
