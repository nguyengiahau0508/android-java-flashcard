<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tdmu_gray"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tên Deck -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/deck_name"
            app:boxStrokeColor="@color/tdmu_blue"
            app:hintTextColor="@color/tdmu_blue"
            app:boxBackgroundMode="outline"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDeckName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mô tả Deck -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/deck_description"
            app:boxStrokeColor="@color/tdmu_blue"
            app:hintTextColor="@color/tdmu_blue"
            app:boxBackgroundMode="outline"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDeckDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nút Save -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textAllCaps="false"
            android:fontFamily="@font/merriweather"
            android:textColor="@color/tdmu_white"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/tdmu_blue"/>

        <!-- Nút Cancel -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:fontFamily="@font/merriweather"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/tdmu_white"
            android:textColor="@color/tdmu_blue"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
